<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Fitness_Planner_and_Log"
             x:Class="Fitness_Planner_and_Log.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <Color x:Key="BackgroundColorLight">#FFFFFF</Color>
                    <Color x:Key="TextColorLight">#000000</Color>
                </ResourceDictionary>
                <ResourceDictionary>
                    <Color x:Key="BackgroundColorDark">#1E1E1E</Color>
                    <Color x:Key="TextColorDark">#FFFFFF</Color>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
